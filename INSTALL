# setup environment
sudo apt-get update
sudo apt-get install git python-pip emacs23-nox
sudo pip install virtualenv

# setup app folder
mkdir dbrc
cd dbrc
git clone git@github.com:jietang/dbrc.git source
virtualenv env
. env/bin/activate
pip install flask flask-sqlalchemy

# mysql
sudo apt-get install mysql-server
sudo service mysql start

# mysql mac
brew install mysql
mysql_install_db --verbose --user=`whoami` --basedir="$(brew --prefix mysql)" --datadir=/usr/local/var/mysql --tmpdir=/tmp
mysql_secure_installation
mysql.server start

# migration
python -c 'from hello import db; db.create_all()'

# running server
python source/server/hello.py

# prod server
sudo apt-get install libevent
pip install gunicorn gevent

gunicorn -c gunicorn_config.py hello:app